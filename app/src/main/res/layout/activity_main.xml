<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/body"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/body"
        android:visibility = "visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/hat"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eyebrows"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/eyebrows"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mouth"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/mouth"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nose"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/nose"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mustache"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/mustache"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arms"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/arms"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eyes"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/eyes"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glasses"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/glasses"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ears"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/ears"
        android:visibility = "invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoes"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/shoes"
        android:visibility = "invisible"/>

  <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:rowCount="3"
      android:columnCount="4"
      android:id="@+id/gridLayout"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true">



    <RadioButton
        android:onClick="selectHat"
        android:text="Hat"
        android:id="@+id/hat_yes"
        android:layout_row="0"
        android:layout_column="0" />

    <RadioButton
        android:onClick="selectEyebrows"
        android:text="Eyebrows"
        android:id="@+id/eyebrows_yes"
        android:layout_row="0"
        android:layout_column="1" />

      <RadioButton
          android:onClick="selectMustache"
          android:text="Mustache"
          android:id="@+id/mustache_yes"
          android:layout_row="0"
          android:layout_column="2" />

      <RadioButton
          android:onClick="selectMouth"
          android:text="Mouth"
          android:id="@+id/mouth_yes"
          android:layout_row="0"
          android:layout_column="3" />

      <RadioButton
        android:onClick="selectArms"
        android:text="Arms"
        android:id="@+id/arms_yes"
          android:layout_row="1"
          android:layout_column="0" />

    <RadioButton
        android:onClick="selectEyes"
        android:text="Eyes"
        android:id="@+id/eyes_yes"
        android:layout_row="1"
        android:layout_column="1" />

    <RadioButton
        android:onClick="selectGlasses"
        android:text="Glasses"
        android:id="@+id/glasses_yes"
        android:layout_row="1"
        android:layout_column="2" />

      <RadioButton
        android:onClick="selectEars"
        android:text="Ears"
        android:id="@+id/ears_yes"
        android:layout_row="2"
        android:layout_column="0" />
     <RadioButton
        android:onClick="selectShoes"
        android:text="Shoes"
        android:id="@+id/shoes_yes"
         android:layout_row="2"
         android:layout_column="1" />

      <RadioButton
          android:onClick="selectNose"
          android:text="Nose"
          android:id="@+id/nose_yes"
          android:layout_row="2"
          android:layout_column="2" />

  </GridLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mr. Potato Head"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
